<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to toilets_path, class: "navbar-brand" do %>
  <%= image_tag "logo.svg", alt: "Logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Mes bookings", bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Louer mes toilettes", new_toilet_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to owner_bookings_path, class: "nav-link notifications" do %>
            <span>Mes demandes de réservations</span>
            <span class="badge-icon d-none" id="bookings_pending"></span>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://avatars0.githubusercontent.com/u/54620502?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

