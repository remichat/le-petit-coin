<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to toilets_path, class: "navbar-brand" do %>
  <%= image_tag "logo.svg", alt: "Logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "My bookings", bookings_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Rent my toilets", new_toilet_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? && current_user.photo.attached? %>
        <li class="nav-item dropdown">
          <%= cl_image_tag(current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false ) %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Sign out", "#", class: "dropdown-item" %>
  <!--           <%= link_to "Another action", "#", class: "dropdown-item" %>
   -->    </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign in", "#" , class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

