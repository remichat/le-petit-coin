<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "logo.svg", alt: "Logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item ">
          <%= link_to bookings_path, class: "nav-link #{(@page_title.present? && @page_title == "booking_index")? "nav-active" : ""}" do %>
            <span>Mes bookings</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Louer mes toilettes", new_toilet_path, class: "nav-link #{(@page_title.present? && @page_title == "toilet_new")? "nav-active" : ""}" %>
        </li>
        <li class="nav-item">
          <%= link_to owner_bookings_path, class: "nav-link notifications #{(@page_title.present? && @page_title == "owner_index")? "nav-active" : ""}" do %>
            <span>Mes demandes de réservations</span>
            <span class="badge-icon <%= "d-none" if current_user.number_of_notifications.zero? %>" id="bookings_pending">
              <%= current_user.number_of_notifications %>
            </span>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

