<div class="container">
  <div class="row p-4">
    <div class="col-8">
      <div class="d-flex justify-content-between">
        <h1><%= @toilet.title %></h1>
        <div><%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %></div>
        <%= @toilet.user.first_name %>
      </div class="row pt-4">
        <p><%= @toilet.description %></p>
      </div>
    <div class="col-4">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Choississez précisément l'heure de votre commission</h2>
      <%= simple_form_for :search, method: "get" do |f| %>
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
