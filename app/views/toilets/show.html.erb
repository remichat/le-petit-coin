
<div class="container w-80">
<div class="toilet-cover" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.2)), url(<%= cl_image_path @toilet.photo.key, alt: "alttext" %>);"></div>
  <div class="row p-4">
    <div class="col-8 pr-5 toilet-main-infos">
      <div class="d-flex justify-content-between">
        <div>
          <h1 class="title-toilet"><%= @toilet.title %></h1>
          <p><i class="fas fa-map-marked-alt"></i>  <%= @toilet.address %></p>
        </div>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
      </div>
      <div class="d-flex justify-content-between border-bottom">
        <ul class="list-inline">
          <li class="list-inline-item">Modèle: <span class="blue-caca feature-info"><%= @toilet.toilet_type %></span></li>
          <li class="list-inline-item">Capacité: <span class="blue-caca feature-info"><%= @toilet.capacity %></span></li>
          <li class="list-inline-item">Pour: <span class="blue-caca feature-info"><%= Toilet::GENDERS_ICONS[@toilet.gender] %></span></li>
        </ul>
      </div>
      <div id="description" class="mt-3">
        <p><%= simple_format @toilet.description %></p>
      </div>
    </div>

    <div class="col-4 bookingf sticky-top">
        <div class="form-wrapper" style="width: 100%; margin: 0 auto;">
          <h2>Choississez précisément l'heure de votre commission</h2>
          <%= simple_form_for [@toilet, @booking] do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "C'est parti !", class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
